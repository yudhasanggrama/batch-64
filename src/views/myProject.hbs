<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- bs5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">

    <!-- font google cdnjs -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato&family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">

    <!-- font awesome cdnjs  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- bootstrap 5 icon cdnjs -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

    <!-- css / stylesheet yang saya buat -->
    <link rel="stylesheet" href="../assets/css/style.css">
    <link rel="shortcut icon" href="assets/img/brandred.png" type="image/x-icon">

    <title>Form Contact</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="#"><img src="assets/img/brandred.png" alt="" width="30" height="24"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active fw-bold" href="/contact">My Project</a>
                </li>
            </ul>
                <form class="d-flex" role="button">
                    <button class="btn-custom" type="button" onclick="window.location.href = '/home'">Return</button>
                </form>
            </div>
        </div>
    </nav>

    <section>
    <div class="container">
        <div class="row mt-4">
        {{#each data}}
            <div class="col-md-4 mb-4">
                <div class="card" style="width: 18rem;">
                <img src="../assets/img/brandred.png" class="card-img-top">
                <div class="card-body">
                    <a href="/detail/{{this.id}}" class="text-decoration-none text-black">
                    <h6 class="card-title fw-bold">{{this.project}}</h6>
                    </a>
                    <p class="card-text small text-muted">Durasi : {{this.duration}}</p>
                    <p class="card-text">{{this.description}}</p>
                    <div class="d-flex">
                        <p><i class="fa-brands fa-node-js"></i></p>
                        <p><i class="fa-brands fa-react"></i></p>
                        <p><i class="fa-solid fa-code"></i></p>
                    </div>
                    <div class="d-flex gap-2 justify-content-center mt-2">
                        <button class="button">Edit</button>
                        <button class="button">Delete</button>
                    </div>
                </div>
                </div>
            </div>
        {{/each}}
        </div>
    </div>
    </section>





    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <script src="assets/js/index.js"></script>
</body>
</html>

